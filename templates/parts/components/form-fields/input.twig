{% set class = 'sk-form' %}

<div class="{{ class }}-field">

	{% if label %}
		<label class="{{ class }}-label" for="{{ id }}">{{ label }}</label>
	{% endif %}

	{% if inputIcon %}
		<div class="{{ class }}-wrapper-icon">
		{% endif %}

		<input id="{{ id }}" class="{{ class }}-control" type="{{ type ? type : 'text' }}" name="{{ name }}"
			placeholder="{{ placeholder }}" value="{{ value }}" {{ required ? 'required' : '' }} {{ disabled ? 'disabled' : '' }}
			{% if urlParams %}
				data-url-params="keyup"
				data-params-key="search"
			{% endif %}
			/>
		{% if inputIcon %}
			<svg>
				<use href="#icon-{{ inputIcon }}"></use>
			</svg>
		{% endif %}

		{% if inputIcon %}
		</div>
	{% endif %}

	{% if helpText %}
		<span class="{{ class }}-help-text">{{ helpText }}</span>
	{% endif %}

</div>


